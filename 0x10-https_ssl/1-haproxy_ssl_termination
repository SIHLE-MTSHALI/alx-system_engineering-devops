global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

frontend www-https
    bind *:443 ssl crt /etc/ssl/certs/www.sihlemtshali.tech.pem
    http-request set-header X-Forwarded-Proto https
    default_backend web-backend

backend web-backend
    balance roundrobin
    server 483003-web-01 18.210.13.239:80 check
    server 483003-web-02 18.214.89.149:80 check
