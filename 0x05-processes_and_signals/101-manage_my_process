#!/usr/bin/env bash
# Manages the manage_my_process script.

PID_FILE="/var/run/my_process.pid"
SCRIPT="./manage_my_process"

start_process() {
    echo "Starting manage_my_process..."
    $SCRIPT &
    echo $! > "$PID_FILE"
    echo "manage_my_process started."
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process is not currently running."
    fi
}

case "$1" in
    start)
        start_process
        ;;
    stop)
        stop_process
        ;;
    restart)
        stop_process
        sleep 1
        start_process
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
