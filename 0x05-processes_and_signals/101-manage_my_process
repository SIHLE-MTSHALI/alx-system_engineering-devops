#!/usr/bin/env bash
# Manages the manage_my_process script: start, stop, restart.

PID_FILE="/var/run/myscript.pid"
SCRIPT_PATH="./manage_my_process"

start() {
    if [ -f "$PID_FILE" ]; then
        echo "manage_my_process is already running."
    else
        $SCRIPT_PATH &
        echo $! > "$PID_FILE"
        echo "manage_my_process started."
    fi
}

stop() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        kill "$PID"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped."
    else
        echo "manage_my_process is not running."
    fi
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        sleep 1
        start
        ;;
    *)
        echo "Usage: $0 {start|stop|restart}"
        ;;
esac
